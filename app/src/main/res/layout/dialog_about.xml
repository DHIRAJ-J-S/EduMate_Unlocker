<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@drawable/dialog_background">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="App Icon" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="EduMate Unlocker"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="404, About Page Not Found"
        android:textSize="14sp"
        android:textColor="#888888"
        android:gravity="center" />

    <!-- Version (Clickable for Easter Egg) -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="v1.0"
        android:textSize="14sp"
        android:textColor="#888888"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Easter Egg Container -->
    <FrameLayout
        android:id="@+id/easterEggContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <!-- Photo in circular CardView -->
        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/easterEggCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp">
            
            <ImageView
                android:id="@+id/easterEggImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- 404 Error Text -->
        <TextView
            android:id="@+id/easterEggError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="404\nImage\nNot Found"
            android:textSize="12sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:background="@drawable/circle_background"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Tagline -->
    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Thank You for Trying out my App ;)"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center" />

    <!-- Credit -->
    <TextView
        android:id="@+id/creditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cooked up by the.404guy"
        android:textSize="13sp"
        android:textColor="#666666"
        android:gravity="center" />

    <!-- Fun emoji row -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âœ¨ðŸ¦†ðŸ’»âœ¨"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
